FROM node:22-alpine

WORKDIR /app

COPY server/package*.json ./
RUN npm install --production

COPY server/ .

HEALTHCHECK --interval=30s --timeout=3s \
  CMD node -e "require('http').request('http://localhost:2050', (res) => process.exit(res.statusCode === 200 ? 0 : 1)).end()"

EXPOSE 2050

CMD ["sh", "-c", "node src/index.js 2>&1 | tee -a /var/log/node.log"]